# Environment variables for EHS Electronic Journal

# Database Configuration
# Choose database type: sqlite, postgresql, mssql
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///../ehs_journal.db

# PostgreSQL Configuration (if DATABASE_TYPE=postgresql)
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=ehs_electronic_journal
POSTGRES_USER=ehs_user
POSTGRES_PASSWORD=ehs_password

# MS SQL Server Configuration (if DATABASE_TYPE=mssql)
MSSQL_SERVER=localhost
MSSQL_PORT=1433
MSSQL_DATABASE=ehs_electronic_journal
MSSQL_USER=ehs_user
MSSQL_PASSWORD=EhsPassword123!
MSSQL_DRIVER=ODBC Driver 18 for SQL Server

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production-this-should-be-a-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_NAME=EHS Electronic Journal
APP_VERSION=1.0.0
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Timezone Configuration
DEFAULT_TIMEZONE=America/New_York